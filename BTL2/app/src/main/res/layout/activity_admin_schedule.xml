<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1C7FCE"
    android:orientation="vertical"
    tools:context=".Admin_Schedule">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="QUẢN LÝ LỊCH XE CHẠY"
        android:textColor="@color/white"
        android:textSize="30dp" />


    <SearchView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center"
        android:queryHint="Tìm kiếm..." />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextText8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Biển số xe"
                android:inputType="text"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/editTextText9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tên tài xế"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CHỌN GIỜ XUẤT PHÁT"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textThoiGian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="16dp"
                android:text="HH:mm"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CHỌN ĐIỂM XUẤT PHÁT"
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/spinnerXuatPhat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:spinnerMode="dropdown"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="CHỌN ĐIỂM ĐẾN"
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/spinnerDen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:spinnerMode="dropdown"
                android:textAlignment="center" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F6A2A2"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:text="XÁC NHẬN" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>