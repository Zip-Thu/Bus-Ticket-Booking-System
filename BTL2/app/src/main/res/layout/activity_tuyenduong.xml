<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_ticket"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTuyenDuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Các tuyến đường phổ biến"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvTuyenDuongContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Hà Nội - Hồ Chí Minh\n2. Đà Nẵng - Hà Nội\n3. Nha Trang - Hồ Chí Minh"
        android:textSize="16sp"/>
</LinearLayout>
